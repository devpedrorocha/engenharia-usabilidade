---
// src/components/Button.astro
const { type = "button", variant = "primary", onClick, disabled = false } = Astro.props;
---

<button
  type={type}
  onclick={onClick}
  disabled={disabled}
  class={`w-full py-2 px-4 rounded-md font-semibold text-white transition duration-300 
    ${variant === "primary" && !disabled ? "bg-blue-600 hover:bg-blue-700" : ""}
    ${variant === "secondary" && !disabled ? "bg-gray-600 hover:bg-gray-700" : ""}
    ${variant === "danger" && !disabled ? "bg-red-600 hover:bg-red-700" : ""}
    ${disabled ? "bg-gray-400 cursor-not-allowed" : ""}
  `}
>
  <slot />
</button>
