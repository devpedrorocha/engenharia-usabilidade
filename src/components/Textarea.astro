---
// src/components/Textarea.astro
const { label, name, id, value, onInput, error, placeholder, rows = 4, cols = 50 } = Astro.props;
---

<div class="mb-4">
  <!-- Label -->
  <label for={id} class="block text-sm font-medium text-blue-900 mb-2">
    {label}
  </label>

  <!-- Textarea -->
  <textarea
    name={name}
    id={id}
    value={value}
    oninput={onInput}
    placeholder={placeholder}
    rows={rows}
    cols={cols}
    class={`w-full px-4 py-2 text-lg border rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 
            ${error ? "border-red-500" : "border-blue-300"}`}></textarea>

  <!-- Error message -->
  {error && <p class="mt-2 text-sm text-red-500">{error}</p>}
</div>
